FROM python:3.7.1

LABEL Author="LinkRs"
LABEL version="1.0"

ENV PYTHONDONTWRITEBYTECODE 1
ENV FLASK_APP "api/init.py"
ENV FLASK_ENV "development"
ENV FLASK_DEBUG True

RUN mkdir /api

WORKDIR /api

ADD . /api

RUN pip install --upgrade pip && \
    pip install -r requirements.txt

EXPOSE 5000

CMD python3 init.py